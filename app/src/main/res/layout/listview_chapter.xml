<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/course_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chapterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/course_title_border"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chapter_ic_contact_support"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact_support" />
        <ProgressBar
            android:id="@+id/task_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            style="@android:style/Widget.ProgressBar.Horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chapter_ic_code"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_code" />
        <ProgressBar
            android:id="@+id/code_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="4dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            style="@android:style/Widget.ProgressBar.Horizontal" />
    </LinearLayout>
</LinearLayout>