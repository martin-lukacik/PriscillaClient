<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PriscillaClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorCourse">#2D3033</item>
        <item name="colorSpinner">#2D3033</item>
        <item name="colorSlate">#FFFFFF</item>
    </style>

    <style name="Blue" parent="Theme.PriscillaClient">
        <item name="colorPrimary">#72BCFF</item>
        <item name="colorPrimaryVariant">#004f99</item>
    </style>
    <style name="Green" parent="Theme.PriscillaClient">
        <item name="colorPrimary">#74E092</item>
        <item name="colorPrimaryVariant">#017020</item>
    </style>
    <style name="Orange" parent="Theme.PriscillaClient">
        <item name="colorPrimary">#FFC681</item>
        <item name="colorPrimaryVariant">#955001</item>
    </style>
    <style name="Red" parent="Theme.PriscillaClient">
        <item name="colorPrimary">#FA8D8D</item>
        <item name="colorPrimaryVariant">#8c1b1a</item>
    </style>
</resources>